<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_16">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/dialog_file_camera_btn"
        app:layout_constraintStart_toStartOf="@+id/dialog_file_camera_btn"
        app:layout_constraintTop_toTopOf="@+id/dialog_file_camera_btn" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dialog_file_camera_btn"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dialog_file_gallery_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_photo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_gallery_feature_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gallery"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/dialog_file_gallery_btn"
        app:layout_constraintStart_toStartOf="@+id/dialog_file_gallery_btn"
        app:layout_constraintTop_toTopOf="@+id/dialog_file_gallery_btn" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dialog_file_gallery_btn"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_file_camera_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_folder" />
</androidx.constraintlayout.widget.ConstraintLayout>