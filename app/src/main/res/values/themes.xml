    <style name="Theme.Helper.ToolbarText">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Helper.ToolBarCross" parent="Widget.AppCompat.Toolbar">
        <item name="buttonGravity">center_vertical</item>
        <item name="navigationIcon">@drawable/ic_close</item>
        <item name="titleEnabled">false</item>
    </style>

    <style name="Theme.Helper.ToolBarBack" parent="Widget.AppCompat.Toolbar">
        <item name="buttonGravity">center_vertical</item>
