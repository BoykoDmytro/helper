    <style name="Theme.Helper.FullWidthTransparentDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowMinWidthMajor">84%</item>
        <item name="android:windowMinWidthMinor">84%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TabsText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="Theme.Helper.BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.Helper.BottomSheetStyle</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Helper.BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
